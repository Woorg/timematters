.nav
	&__list
		display flex
		flex-flow row wrap
	&__item
		margin-right 24px
		&:last-child
			margin-right 0
	&__link
		color #FFF
		font-family $a
		font-weight normal
		font-size 18px
		line-height 1.17
		text-decoration none
		tr(color .3s ease)
		&:hover
			color darken(#FFF, 10)
			tr(color .3s ease)

.nav_secondary
	.nav__link
		color #303956
		font-weight 500
		&:hover
			color lighten(#303956, 20)
